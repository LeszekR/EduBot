{
        "version": "0.2.0",
        "configurations": [
            {
                "name": "Launch debug",
                "type": "chrome",
                "request": "launch",
                "url": "http://localhost:4200/",
                "runtimeArgs": [
                    "--user-data-dir",
                    "--remote-debugging-port=9222"
                    ],
                "sourceMaps": true,
                "trace": true,
                "webRoot": "${workspaceRoot}",
                "userDataDir": "${workspaceRoot}/out/chrome"
            },         
            {
                "type": "node",
                "request": "launch",
                "name": "Launch Program",
                "program": "${file}",
                "outFiles": [
                    "${workspaceRoot}/out/**/*.js"
                ]
            }
        ]
    }