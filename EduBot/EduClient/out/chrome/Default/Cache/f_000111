<div id="answer-21948020" class="answer" data-answerid="21948020"  itemscope itemtype="http://schema.org/Answer">
    <table>
        <tr>
            <td class="votecell">
                

<div class="vote">
        <input type="hidden" name="_id_" value="21948020">
        <a class="vote-up-off" title="This answer is useful">up vote</a>
