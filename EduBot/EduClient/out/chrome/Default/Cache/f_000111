<div id="answer-43192052" class="answer" data-answerid="43192052"  itemscope itemtype="http://schema.org/Answer">
    <table>
        <tr>
            <td class="votecell">
                

<div class="vote">
        <input type="hidden" name="_id_" value="43192052">
        <a class="vote-up-off" title="This answer is useful">up vote</a>
